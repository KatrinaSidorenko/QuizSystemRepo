@{
    ViewData["Title"] = "Home Page";
}




<!DOCTYPE html>
<html lang="en">

<head>
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }
</head>

<body id="home" style="display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0;">

    <div class="home-container" style="margin-top: 30vh;">
        <div class="home-content-row">
            <div class="home-left-col text-center">
                <h1 class="home-title">Welcome to the QuizHub</h1>
                @if (!User.Identity.IsAuthenticated)
                {
                    <form asp-action="Login" asp-controller="Account" method="get">
                        <button type="submit" class="home-button">
                            <span>Get Started</span>
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

</body>

</html>


