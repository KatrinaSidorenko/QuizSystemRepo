@using QuizSystem.ViewModels.SharedTestViewModels;
@using Core.Enums;
@model CreateShareTestViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <!-- Bootstrap CSS -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap DateTimePicker CSS and JS (adjust the version if needed) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-datetimepicker@4.17.47/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datetimepicker@4.17.47/build/js/bootstrap-datetimepicker.min.js"></script>

   <style>
        .form-outline-date {
            display: flex;
            justify-content: space-between; /* or use 'space-around' or 'space-evenly' based on your preference */
        }

        .form-group-date {
            flex: 1;
            margin-right: 10px; /* Adjust the margin as needed for spacing between date pickers */
        }
   </style>
</head>
<body>
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }
    <!--Main layout-->
    <main class="my-5">
        <div class="container">
            <!--Section: Content-->
            <section class="text-center text-md-start">
                <h4 class="mb-5"><strong>Share test page</strong></h4>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <form id="create-form" method="post" asp-controller="SharedTest" asp-action="Create" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="TestId" value="@Model.TestId" />
                                <input type="hidden" asp-for="TestName" value="@Model.TestName" />
                                <!-- Name input -->
                                <div class="form-outline mb-4">
                                    <h4>Test Title: @Model.TestName</h4>
                                </div>
                                <!-- Message input -->
                                <div class="form-outline mb-4">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control custom-textarea" rows="5" placeholder="Test Description"></textarea>
                                </div>
                                <div class="form-outline mb-3">
                                    <label asp-for="AttemptCount" class=" form-label" >Attempts count</label>
                                    <input asp-for="AttemptCount" type="number" class="form-control">
                                    <span asp-validation-for="AttemptCount" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-3">
                                    <label asp-for="PassScore" class="form-label">Passing score</label>
                                    <input asp-for="PassScore" type="text" class="form-control" pattern="[0-9]+(\.[0-9]+)?" title="Enter a valid number (use '.')">
                                    <span asp-validation-for="PassScore" class="text-danger"></span>
                                </div>
                                <label class="form-label" for="customRange1">Time duration (in minutes): <span id="customRange1Label">0</span></label>
                                <div class="range">
                                    <input asp-for="AttemptDuration" type="range" class="form-range" id="customRange1" min="0" max="120" step="1" value="0" />
                                </div>


                                <div class="form-outline-date mb-4">
                                    <div class="form-group-date">
                                        <div class="field">
                                            <label asp-for="StartDate" class="control-label"></label>
                                            <input asp-for="StartDate" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local">
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group-date">
                                        <div class="field">
                                            <label asp-for="EndDate" class="control-label"></label>
                                            <input asp-for="EndDate" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local">
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>


                                <!-- Submit button -->
                                <div class="text-end">
                                    <a href="@Url.Action("Index", "Test", new{id = @User.Claims.FirstOrDefault(c => c.Type == "id")?.Value})" type="button" class="btn btn-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Share</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </section>

        </div>
    </main>
    <script>
        $(function () {
            $('#customRange1').on("input", function () {
                $('#customRange1Label').text($(this).val() + " minutes");
            });
        });
        //$(function () {
        //    // Get the current date and time in the format "YYYY-MM-DDTHH:mm"
        //    var currentDateTime = new Date().toISOString();

        //    // Set the value of the date inputs to the current date and time
        //    $('input[type="date"]').val(currentDateTime);
        //});
    </script>
    <!--Main layout-->
</body>
</html>